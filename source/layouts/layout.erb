<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_tag 'images/logo.png' %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <meta property="og:title" content="Letters of Love">
    <meta property="og:description" content="Make a difference to refugee crises, one letter at a time">
    <meta property="og:image" content="https://tomvaillant.com/wp-content/uploads/2018/09/Copy-of-DSC_0081-1.jpg">
    <meta property="og:url" content="https://tomvaillant.com/wp-content/uploads/2018/09/Copy-of-DSC_0081-1.jpg">
<!--     <link href="https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css" rel="stylesheet"/> -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">
  </head>
  <body>
    <%= yield %>
  </body>
</html>
